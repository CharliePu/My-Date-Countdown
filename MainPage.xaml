<Page
    x:Class="My_Date_Countdown.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:My_Date_Countdown"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="TextBlockDays" HorizontalAlignment="Center" Margin="0,334,0,0" Text="0 days left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="72" FontFamily="Segoe UI Light"/>
        <Button x:Name="ButtonSet" Content="Set countdown and notify me daily" Click="ButtonSet_Click" Margin="0,875,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400"/>
        <DatePicker x:Name="DatePickerTargetDate" Margin="0,750,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300"/>
        <TextBox x:Name="TextBoxTitle" HorizontalAlignment="Center" Margin="0,700,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" PlaceholderText="Title"/>
        <TextBlock x:Name="TextBlockTitle" HorizontalAlignment="Center" Margin="0,450,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
